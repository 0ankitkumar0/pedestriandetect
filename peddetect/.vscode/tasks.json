{
	"version": "2.0.0",
	"tasks": [
		{
			"label": "npm: dev",
			"type": "shell",
			"command": "npm",
			"args": [
				"run",
				"dev"
			],
			"group": {
				"kind": "build",
				"isDefault": true
			},
			"isBackground": true,
			"problemMatcher": [],
			"detail": "Start the Next.js development server."
		},
		{
			"label": "uvicorn: backend",
			"type": "shell",
			"command": "python",
			"args": [
				"-m",
				"uvicorn",
				"app:app",
				"--host",
				"0.0.0.0",
				"--port",
				"8000",
				"--reload"
			],
			"options": {
				"cwd": "${workspaceFolder}/backend"
			},
			"isBackground": true,
			"problemMatcher": [],
			"detail": "Run the FastAPI backend with auto-reload."
		}
	]
}